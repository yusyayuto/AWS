aws events put-targets \
  --rule 〈既存ルール名〉 \
  --targets '[
    {
      "Id": "sfn-failover",
      "Arn": "〈STATE_MACHINE_ARN〉",
      "RoleArn": "〈EVENTBRIDGE_INVOKE_ROLE_ARN〉",
      "InputTransformer": { ... },
      "StepFunctionsParameters": {
        "Name": "〈FAILOVER_GROUP〉"   # ← これが実行名の固定
      }
    }
  ]'